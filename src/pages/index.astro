---
import { materialDesign } from "../components/MaterialDesign.js";
import Layout from "../layouts/Layout.astro";

const { primaryColor, bgGradient } = materialDesign().colors;
---

<Layout title="Instituto Socila Bezerra de Menezes." />

<section
  class={`h-[calc(100vh-18vh)] lg:h-[calc(100vh-20vh)] w-full rounded-bl-[50px]  rounded-br-[50px] md:rounded-bl-[170px]  md:rounded-br-[170px] lg:rounded-bl-[220px] lg:rounded-br-[220px] ${bgGradient}`}
>
  <div
    class="bg-criancas w-full h-full md:rounded-bl-[170px] md:rounded-br-[170px] lg:rounded-bl-[220px] lg:rounded-br-[220px]"
  >
    <div
      class="container h-full w-ful mx-auto flex flex-col items-start pb-[60px] md:pb-0 md:pt-12 justify-end md:justify-center p-7"
    >
      <p
        class="mb-3 ml-1 uppercase tracking-[5px] text-lg text-[#e0234e] font-bold"
      >
        Bem-vindo ao
      </p>
      <h1
        class="text-4xl sm:text-5xl xl:w-[50%] font-bold text-white text-left"
      >
        Nosso Instituto Social <br class="hidden sm:block" />Bezerra de Menezes
      </h1>
      <p
        class="text-xl/6 md:text-3xl mt-2 lg:mt-4 text-[#BFAFB8] w-[80%] xl:w-[40%]"
      >
        Transformando vidas atrav√©s do esporte, cultura e da arte.
      </p>

      <button
        class="py-1 px-7 md:px-8 border-2 mt-5 bg-white sm:bg-inherit text-lg text-[#7B1930] md:border-white rounded-full font-medium sm:text-white hover:bg-white hover:text-[#e0234e] duration-300"
        >Quem Somos</button
      >
    </div>
  </div>
</section>
<section class="px-5 h-[18vh] container mx-auto">
  <p
    class="py-3 text-[#B6B6B7] text-sm lg:text-lg lg:py-4 font-medium tracking-[1px]"
  >
    NOSSOS APOIADORES:
  </p>
  <div class="flex items-center justify-between lg:">
    <img
      class="h-9 lg:h-[90px]"
      src="./img/SVG/oplan-care.svg"
      alt="Logo Oplan Care"
    />
    <img class="h-9 lg:h-[90px]" src="./img/SVG/hgi-logo.svg" alt="Logo HGI" />
    <img
      class="h-9 lg:h-[90px]"
      src="./img/SVG/oplan-logo.svg"
      alt="Logo Oplan"
    />
  </div>
</section>

<section class="h-screen container p-5">
  <h2 class="text-3xl text-center color-[#0F0D0E]">Quem somos</h2>
</section>

<style>
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }

  .bg-criancas {
    height: 100%;
    width: 100%;
    background-image: url(/img/bg-criancas.png);
    background-repeat: no-repeat;
    background-position: right top;
    background-size: contain;
  }

  @media (max-width: 600px) {
    .bg-criancas {
      background-size: 130%;
      background-position: center top;
      background-position-x: 30px;
    }
  }
</style>
