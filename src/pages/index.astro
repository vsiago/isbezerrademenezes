---
import { materialDesign } from "../components/MaterialDesign.js";
import Layout from "../layouts/Layout.astro";

const { primaryColor, bgGradient } = materialDesign().colors;
---

<Layout title="Instituto Socila Bezerra de Menezes." />
<section
  class={`h-[calc(100vh-150px)] w-full rounded-bl-[60px] rounded-br-[60px]  lg:rounded-bl-[250px] lg:rounded-br-[250px] ${bgGradient}`}
>
  Oi
</section>

<style>
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
</style>
